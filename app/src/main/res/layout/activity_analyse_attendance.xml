<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sahil.digitalclassroom.ui.AnalyseAttendance">

    <TextView
        android:id="@+id/info_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:text="Enter Date to analyse the data"
        android:textColor="#000"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button_from_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/info_text"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:text="From : 1 JAN 2018" />

    <Button
        android:id="@+id/button_to_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/button_from_date"
        android:layout_marginRight="20dp"
        android:text="To : 1 JAN 2018"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_analyse_attendance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button_from_date"
        android:layout_marginTop="28dp"
        android:scrollbars="vertical" />

</android.support.v4.widget.NestedScrollView>
