<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sahil.digitalclassroom.ui.AnalyseAttendance">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/info_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:text="Enter date to see Student attendance"
            android:textColor="#000"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button_date_analyse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/info_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/color_button"
            android:text="Date : 1 JAN 2018" />


        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/button_date_analyse"
            android:layout_marginTop="14dp"
            android:backgroundTint="@color/dark_grey"
            android:id="@+id/view" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/list_analyse_attendance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/view"
            android:layout_marginTop="10dp"
            android:scrollbars="vertical" />
    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>
