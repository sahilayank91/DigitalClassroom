<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?android:attr/selectableItemBackground"
    android:padding="@dimen/md_keylines"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="3dp"
    app:cardCornerRadius="5dp" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/list_student_avatar"
        android:layout_width="@dimen/avator_size"
        android:layout_height="@dimen/avator_size"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"
        android:scaleType="centerCrop"
        tools:src="@drawable/splash" />

    <TextView
        android:id="@+id/list_student_name"
        android:layout_width="200dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/md_keylines"
        android:layout_toRightOf="@+id/list_student_avatar"
        tools:text="Deepak"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="@dimen/article_subheading" />

    <TextView
        android:id="@+id/list_student_id"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_student_name"
        android:layout_marginLeft="@dimen/md_keylines"
        android:layout_toRightOf="@+id/list_student_avatar"
        android:textColor="@color/medium_grey"
        android:ellipsize="end"
        android:singleLine="true"
        tools:text="2015kucp1010"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="@dimen/list_body" />

        <CheckBox
            android:id="@+id/list_is_present"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/list_student_name"
            android:layout_toRightOf="@+id/list_student_name"
            android:text="Present" />
    </RelativeLayout>

</android.support.v7.widget.CardView>
